<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FlashLight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/white</item>
    </style>


    <style name="StyleNotebook">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="StyleNotebookZabor">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleButtonZabor">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StyleItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleItemZabor">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="StyleItemDesc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Light_Grey</item>
    </style>

    <style name="StyleItemDescZabor">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleItem.Alarm">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Yellow</item>
    </style>

    <style name="StyleItem.AlarmZabor">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleMenu">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleMenuZabor">
        <item name="android:textSize">23sp</item>
